
@model Gaming_Store.Models.Jogos
@{
    ViewBag.Title = "";
}
<h2>Apagar</h2>
<h3>Quer mesmo apagar?</h3>
<div>

    <hr />
    @*  representa as mensagens de erro*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd>
            <a href="~/imagens/@Model" target="_blank">
                <img src="~/imagens/@Model.Fotografia" width="50" height="37" />
            </a>
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            @Html.ActionLink("Regressar ao ínicio", "Index")
        </div>
    }
</div>
